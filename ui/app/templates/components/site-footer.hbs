<div class="layout-row layout-align-space-between-center">
  <div>
    {{{ logos }}}
  </div>
  <div>
    <p>
      {{{ copyright }}}
      {{{ info }}}
    </p>
    <div class="footer-links">
    {{# if cookies_policy}}
      <a href="#" onclick={{action 'openDialog' 'cookies'}}>{{ cookies_text}}</a>
    {{/if}}
    {{#if privacy_policy}}
      {{#link-to 'privacy-policy'}}{{t 'privacy_policy.page.title' }}{{/link-to}}
    {{/if}}
    {{#if access_policy}}
       {{#link-to 'access-policy'}}{{t 'access_policy.page.title' }}{{/link-to}}
    {{/if}}
    {{#if terms}}
       {{#link-to 'terms'}}{{t 'terms.page.title' }}{{/link-to}}
    {{/if}}
    </div>
  </div>
  <div>
    {{{ version_contact }}}
  </div>
</div>
{{#if dialogVisible}}
{{#paper-dialog autoFocus=true fullscreen=true}}
  {{#paper-toolbar}}
    {{#paper-toolbar-tools}}
    <h2>{{t dialogTitle}}</h2>
    {{/paper-toolbar-tools}}
  {{/paper-toolbar}}
  {{#paper-dialog-content classNames="md-padding"}}
    {{component dialogContent}}
  {{/paper-dialog-content}}
  {{#paper-dialog-actions class="layout-row"}}
    {{#paper-button onClick=(action "closeDialog")}} {{t 'close' }}{{/paper-button}}
  {{/paper-dialog-actions}}
{{/paper-dialog}}
{{/if}}

